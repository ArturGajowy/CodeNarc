<ruleset xmlns="http://codenarc.org/ruleset/1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://codenarc.org/ruleset/1.0 http://codenarc.org/ruleset-schema.xsd"
        xsi:noNamespaceSchemaLocation="http://codenarc.org/ruleset-schema.xsd">

    <description>
        Basic rule set.
        These rules are intended to be broadly (if not universally) applicable.
    </description>

    <rule class='org.codenarc.rule.basic.BigDecimalInstantiationRule'/>
    <rule class='org.codenarc.rule.basic.BooleanInstantiationRule'/>
    <rule class='org.codenarc.rule.basic.BooleanMethodReturnsNullRule'/>
    <rule class='org.codenarc.rule.basic.CloneableWithoutCloneRule'/>
    <rule class='org.codenarc.rule.basic.ConstantTernaryExpressionRule'/>
    <rule class='org.codenarc.rule.basic.ConstantIfExpressionRule'/>
    <rule class='org.codenarc.rule.basic.RemoveAllOnSelfRule'/>
    <rule class='org.codenarc.rule.basic.DuplicateCaseStatementRule'/>
    <rule class='org.codenarc.rule.basic.EqualsAndHashCodeRule'/>
    <rule class='org.codenarc.rule.basic.EmptyCatchBlockRule'/>
    <rule class='org.codenarc.rule.basic.EmptyElseBlockRule'/>
    <rule class='org.codenarc.rule.basic.EmptyFinallyBlockRule'/>
    <rule class='org.codenarc.rule.basic.EmptyForStatementRule'/>
    <rule class='org.codenarc.rule.basic.EmptyIfStatementRule'/>
    <rule class='org.codenarc.rule.basic.EmptySwitchStatementRule'/>
    <rule class='org.codenarc.rule.basic.EmptySynchronizedStatementRule'/>
    <rule class='org.codenarc.rule.basic.EmptyTryBlockRule'/>
    <rule class='org.codenarc.rule.basic.EmptyWhileStatementRule'/>
    <rule class='org.codenarc.rule.basic.GStringAsMapKeyRule'/>
    <rule class='org.codenarc.rule.basic.ReturnFromFinallyBlockRule'/>
    <rule class='org.codenarc.rule.basic.ReturnsNullInsteadOfEmptyArrayRule'/>
    <rule class='org.codenarc.rule.basic.ReturnsNullInsteadOfEmptyCollectionRule'/>
    <rule class='org.codenarc.rule.basic.SerialVersionUIDRule'/>
    <rule class='org.codenarc.rule.basic.StringInstantiationRule'/>
    <rule class='org.codenarc.rule.basic.ThrowExceptionFromFinallyBlockRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToPlusMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToMinusMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToMultiplyMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToDivMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToPowerMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToModMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToOrMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToAndMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToXorMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToGetAtMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToLeftShiftMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToRightShiftMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToCompareToMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCallToEqualsMethodRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCreationOfArrayListRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCreationOfHashMapRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCreationOfHashSetRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCreationOfTreeSetRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCreationOfLinkedListRule'/>
    <rule class='org.codenarc.rule.basic.ExplicitCreationOfStackRule'/>
    <rule class='org.codenarc.rule.basic.DoubleNegativeRule'/>
    <rule class='org.codenarc.rule.basic.DeadCodeRule'/>
    <rule class='org.codenarc.rule.basic.InvertedIfElseRule'/>
</ruleset>
